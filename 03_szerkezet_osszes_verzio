# --- Minden lehetséges disztichon-generálás ---
combinations = itertools.product(group01, group02, group03, group04, group05, group06)

with open("disztichonok.txt", "w", encoding="utf-8") as f:
    for combo in combinations:
        # Az első négy elem a hexameter
        hex_line = " ".join(combo[:4]).capitalize()
        # Az utolsó kettő a pentameter
        pent_line = " ".join(combo[4:]).capitalize()
        # Kiírás két sorban, köztük üres sor
        f.write(f"{hex_line}\n{pent_line}\n\n")

print("✅ Az összes lehetséges disztichon legenerálva: disztichonok.txt")
